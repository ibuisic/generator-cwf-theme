{#
/**
 * @file
 * Default theme implementation of an image.
 *
 * Available variables:
 * - attributes: HTML attributes for the img tag.
 * - style_name: (optional) The name of the image style applied.
 *
 * @ingroup templates
 *
 * @see template_preprocess_image()
 */
#}
{% set classes = [
    theme_settings.responsive_images ? 'img-fluid',
    theme_settings.img_thumbnail ? 'img-thumbnail',
    theme_settings.img_border ? 'border',
    theme_settings.img_border_color ? theme_settings.img_border_color,
    theme_settings.img_border_radius ? theme_settings.img_border_radius
] %}
<img{{ attributes.addClass(classes) }} />
