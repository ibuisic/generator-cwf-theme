{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{% do attributes.addClass(['js-offcanvas', 'p-4', 'c-offcanvas--' ~ theme_settings.offcanvas_position]) %}
{% do attributes.setAttribute('data-offcanvas-options', '{"modifiers": "' ~ theme_settings.offcanvas_position ~ ',' ~ theme_settings.offcanvas_type ~ '"}') %}
{% do attributes.setAttribute('id', region) %}

{{ attach_library('<%= themeName %>/' ~ region) }}
{% include "region.html.twig" %}
