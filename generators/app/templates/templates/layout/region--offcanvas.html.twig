{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @ingroup templates
 *
 * @see template_preprocess_region()
 */
#}
{% set angle = theme_settings.offcanvas_angle ? theme_settings.offcanvas_angle %}
{% set type = theme_settings.offcanvas_type ? theme_settings.offcanvas_type %}

{% do attributes.addClass('js-offcanvas') %}
{% do attributes.setAttribute('data-offcanvas-options', {"modifiers": "" ~ angle ~ ',' ~ type ~ ""}) %}
{% do attributes.setAttribute('id', region) %}

{{ attach_library('<%= themeName %>/' ~ region) }}
{% include "region.html.twig" %}
