{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
    'top-bar',
    'bg-dark',
    'text-white'
  ]
%}

{% set container_classes = region_container|clean_class %}

{% if content %}
  <section{{ attributes.addClass(classes) }}>
    {% if (region_container) %}
      <div class="{{ container_classes }}">
        <div class="row">
    {% endif %}
        {% block content %}
            <button id="flyout-toggle" type="button" onClick="this.classList.toggle('open');" aria-controls="#side-flyout" data-toggle="collapse" data-target="#side-flyout" aria-expanded="false">
              <span></span>
              <span></span>
              <span></span>
              <span></span>
            </button>
          {{ content }}
        {% endblock %}
    {% if (region_container) %}
        <div>
      </div>
    {% endif %}
  </section>
{% endif %}
